@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Admin/Index.cshtml";
}


<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="~/css/admin-style.css" />



<div class="create-container">
    <div class="page-header">
        <h1 class="text-3xl font-bold text-white">Hakkımda Bilgilerini Güncelle</h1>
        <p class="text-slate-400 mt-2">Mevcut bilgileri düzenleyip kaydedebilirsiniz.</p>
    </div>

    <div class="max-w-4xl mx-auto bg-[#2d3748] rounded-[2rem] p-8 shadow-2xl border border-slate-700">
        <form method="post">
            <input type="hidden" asp-for="AboutId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <div class="flex flex-col gap-2">
                    <label class="form-label">İsim Soyisim</label>
                    <input type="text" asp-for="NameSurname" class="form-input p-3 rounded-xl w-full" required />
                </div>

                <div class="flex flex-col gap-2">
                    <label class="form-label">Başlık / Unvan</label>
                    <input type="text" asp-for="Title" class="form-input p-3 rounded-xl w-full" required />
                </div>

                <div class="flex flex-col gap-2">
                    <label class="form-label">Telefon Numarası</label>
                    <input type="text" asp-for="PhoneNumber" class="form-input p-3 rounded-xl w-full" />
                </div>

                <div class="flex flex-col gap-2">
                    <label class="form-label">E-posta Adresi</label>
                    <input type="email" asp-for="Email" class="form-input p-3 rounded-xl w-full" />
                </div>

                <div class="flex flex-col gap-2 md:col-span-2">
                    <label class="form-label">Profil Resim Linki (URL)</label>
                    <input type="text" asp-for="ImageUrl" class="form-input p-3 rounded-xl w-full" />
                </div>

                <div class="flex flex-col gap-2 md:col-span-2">
                    <label class="form-label">Adres Bilgisi</label>
                    <input type="text" asp-for="Address" class="form-input p-3 rounded-xl w-full" />
                </div>

                <div class="flex flex-col gap-2 md:col-span-2">
                    <label class="form-label">Hakkımda Açıklaması</label>
                    <textarea asp-for="Description" rows="4" class="form-input p-3 rounded-xl w-full resize-none"></textarea>
                </div>
            </div>

            <div class="mt-8 pt-6 border-t border-slate-700 flex justify-end gap-4">
                <a href="/About/Index" class="px-6 py-3 rounded-xl font-bold text-slate-400 hover:text-white transition-colors">Vazgeç</a>

                <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white px-10 py-3 rounded-xl font-bold shadow-lg shadow-emerald-900/20 transform hover:-translate-y-1 transition-all">
                    Değişiklikleri Güncelle
                </button>
            </div>
        </form>
    </div>
</div>