@model Contact
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Admin/Index.cshtml";
}


<!DOCTYPE html>
<html class="dark" lang="tr">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>İletişim Bilgisi Giriş Formu</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&display=swap" rel="stylesheet" />
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#13c8ec",
                        "background-light": "#f6f8f8",
                        "background-dark": "#101f22",
                        "navy-dark": "#0b1120",
                        "navy-card": "#1c2527",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-white min-h-screen">
    <div class="p-8 max-w-5xl mx-auto w-full">
        <!-- Page Heading -->
        <div class="mb-8">
            <h1 class="text-3xl font-black text-slate-900 dark:text-white tracking-tight">İletişim Bilgilerini Güncelle</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-2 text-lg">Web sitesinde görüntülenecek iletişim detaylarını buradan ekleyebilirsiniz. Bu bilgiler C# API servisleri aracılığıyla frontend tarafına aktarılır.</p>
        </div>

        <!-- Form Section -->
        <form action="#" class="space-y-6" method="POST">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column -->
                <div class="space-y-6">
                    <div class="bg-white dark:bg-navy-card p-6 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm">
                        <label class="block mb-6">
                            <p class="text-slate-900 dark:text-white text-sm font-bold uppercase tracking-wider mb-2">Telefon</p>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500">
                                    <span class="material-symbols-outlined text-lg">call</span>
                                </div>
                                <input class="block w-full pl-10 pr-4 py-3 bg-slate-50 dark:bg-[#111718] border border-slate-200 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-slate-500" name="phone" placeholder="+90 5xx xxx xx xx" type="tel" />
                            </div>
                        </label>

                        <label class="block mb-6">
                            <p class="text-slate-900 dark:text-white text-sm font-bold uppercase tracking-wider mb-2">Email Adresi</p>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500">
                                    <span class="material-symbols-outlined text-lg">mail</span>
                                </div>
                                <input class="block w-full pl-10 pr-4 py-3 bg-slate-50 dark:bg-[#111718] border border-slate-200 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-slate-500" name="email" placeholder="info@sirketiniz.com" type="email" />
                            </div>
                        </label>

                        <label class="block">
                            <p class="text-slate-900 dark:text-white text-sm font-bold uppercase tracking-wider mb-2">Web Sitesi</p>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-slate-500">
                                    <span class="material-symbols-outlined text-lg">language</span>
                                </div>
                                <input class="block w-full pl-10 pr-4 py-3 bg-slate-50 dark:bg-[#111718] border border-slate-200 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-slate-500" name="website" placeholder="https://www.sirketiniz.com" type="url" />
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="space-y-6">
                    <div class="bg-white dark:bg-navy-card p-6 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm flex flex-col h-full">
                        <label class="block mb-6 flex-grow">
                            <p class="text-slate-900 dark:text-white text-sm font-bold uppercase tracking-wider mb-2">Açık Adres</p>
                            <div class="relative h-full flex flex-col">
                                <textarea class="block w-full flex-grow p-4 bg-slate-50 dark:bg-[#111718] border border-slate-200 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-slate-500 resize-none" name="address" placeholder="Şirket merkez adresini detaylıca giriniz..." rows="4"></textarea>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Map Location (Full Width) -->
            <div class="bg-white dark:bg-navy-card p-6 rounded-xl border border-slate-200 dark:border-slate-800 shadow-sm">
                <label class="block">
                    <div class="flex items-center justify-between mb-2">
                        <p class="text-slate-900 dark:text-white text-sm font-bold uppercase tracking-wider">Harita Konumu (Iframe / Koordinat)</p>
                        <span class="text-xs text-slate-500 font-medium">Google Maps embed kodunu buraya yapıştırabilirsiniz.</span>
                    </div>
                    <div class="relative">
                        <div class="absolute top-3 left-3 text-slate-500">
                            <span class="material-symbols-outlined text-lg">location_on</span>
                        </div>
                        <textarea class="block w-full pl-10 p-4 bg-slate-50 dark:bg-[#111718] border border-slate-200 dark:border-slate-700 rounded-lg text-slate-900 dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all placeholder:text-slate-500 font-mono text-sm" name="map_location" placeholder='<iframe src="https://www.google.com/maps/embed?..." ...></iframe>' rows="3"></textarea>
                    </div>
                </label>
            </div>

            <!-- Form Footer Buttons -->
            <div class="flex items-center justify-end gap-4 pt-4">
                <button class="px-6 py-3 rounded-lg text-slate-400 hover:text-white hover:bg-slate-800 transition-all font-medium text-sm flex items-center gap-2" type="reset">
                    <span class="material-symbols-outlined text-lg">restart_alt</span>
                    Değişiklikleri Temizle
                </button>
                <button class="px-8 py-3 bg-primary hover:bg-primary/90 text-navy-dark rounded-lg font-bold text-sm shadow-lg shadow-primary/20 transition-all transform active:scale-[0.98] flex items-center gap-2" type="submit">
                    <span class="material-symbols-outlined">save</span>
                    Bilgileri Ekle
                </button>
            </div>
        </form>

        <!-- Helpful Tips -->
        <div class="mt-12 p-6 bg-primary/10 border border-primary/20 rounded-xl">
            <div class="flex gap-4">
                <div class="bg-primary text-navy-dark size-10 rounded-full flex items-center justify-center shrink-0">
                    <span class="material-symbols-outlined">lightbulb</span>
                </div>
                <div>
                    <h4 class="text-primary font-bold">Önemli Hatırlatma</h4>
                    <p class="text-slate-400 text-sm mt-1 leading-relaxed">
                        Güncellediğiniz bu bilgiler doğrudan veritabanına işlenir ve sitenizin footer, iletişim sayfası ve iletişim formlarında anında güncellenir.
                        Google Maps iframe kodunu girerken 'width="100%"' parametresini kullandığınızdan emin olun.
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>