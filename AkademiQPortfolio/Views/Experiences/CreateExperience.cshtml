@model Experience
@{
    ViewData["Title"] = "CreateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="~/css/admin-style.css" />

<div class="create-container">
	<div class="page-header">
		<h1 class="text-3xl font-bold text-white">Yeni Deneyim Girişi</h1>
		<p class="text-slate-400 mt-2">Buradan yeni deneyim girişi yapabilirsiniz. </p>
	</div>

	<div class="max-w-4xl mx-auto bg-[#2d3748] rounded-[2rem] p-8 shadow-2xl border border-slate-700">
		<form method="post">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">

				<div class="flex flex-col gap-2">
					<label class="form-label">Şirket Adı</label>
					<input type="text" asp-for="CompanyName" class="form-input p-3 rounded-xl w-full" placeholder="Örn: Google, Microsoft..." required />
				</div>

				<div class="flex flex-col gap-2">
					<label class="form-label">Giriş/Çıkış Tarihi</label>
					<input type="text" asp-for="Workdate" class="form-input p-3 rounded-xl w-full" placeholder="Örn: 2025-2026" required />
				</div>

				<div class="flex flex-col gap-2">
					<label class="form-label">Pozisyon Adı</label>
					<input type="text" asp-for="Title" class="form-input p-3 rounded-xl w-full" placeholder="Örn: Yazılımcı..." required />
				</div>

				<div class="flex flex-col gap-2">
					<label class="form-label">Açıklama</label>
					<input type="text" asp-for="Description" class="form-input p-3 rounded-xl w-full" placeholder="Örn: Proje geliştirme ve yöne..." required />
				</div>

				<div class="flex flex-col gap-2">
					<label class="form-label">Icon Linki</label>
					<input type="text" asp-for="IconUrl" class="form-input p-3 rounded-xl w-full" placeholder="Örn: ion-images" required />
				</div>

			</div>

			<div class="mt-8 pt-6 border-t border-slate-700 flex justify-end gap-4">
				<a href="/Experiences/Index" class="px-6 py-3 rounded-xl font-bold text-slate-400 hover:text-white transition-colors">
					Vazgeç
				</a>
				<button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-10 py-3 rounded-xl font-bold shadow-lg shadow-blue-900/20 transform hover:-translate-y-1 transition-all">
					Kaydet ve Yayınla
				</button>
			</div>
		</form>
	</div>
</div>