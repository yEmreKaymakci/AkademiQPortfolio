@model List<Contact>

@{
    var contact = Model?.FirstOrDefault();
}

<section id="section8" class="py-24 bg-slate-200 relative overflow-hidden">

    <div class="absolute -left-20 top-1/2 w-72 h-72 bg-brand-50 rounded-full blur-3xl opacity-60 pointer-events-none"></div>
    <div class="absolute right-0 bottom-0 w-96 h-96 bg-gray-50 rounded-full blur-3xl opacity-50 pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">

        <div class="text-center mb-16">
            <span class="text-brand-600 font-bold tracking-wider uppercase text-sm bg-brand-50 px-3 py-1 rounded-full">İletişim</span>
            <h2 class="text-4xl font-extrabold text-slate-900 mt-4">Bir Kahve İçelim mi?</h2>
            <p class="text-slate-500 mt-4 max-w-2xl mx-auto">
                Projeleriniz için teklif almak veya sadece tanışmak için aşağıdaki formu kullanabilirsiniz.
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-start">

            <div class="space-y-8">

                @if (contact != null)
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
                            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-brand-600 shadow-sm mb-4">
                                <i class="bi bi-geo-alt-fill text-xl"></i>
                            </div>
                            <h4 class="font-bold text-slate-900">Konum</h4>
                            <p class="text-slate-500 text-sm mt-1">@contact.Address</p>
                        </div>

                        <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
                            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-brand-600 shadow-sm mb-4">
                                <i class="bi bi-envelope-fill text-xl"></i>
                            </div>
                            <h4 class="font-bold text-slate-900">Email</h4>
                            <a href="mailto:@contact.Email" class="text-slate-500 text-sm mt-1 hover:text-brand-600 transition-colors">@contact.Email</a>
                        </div>

                        <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
                            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-brand-600 shadow-sm mb-4">
                                <i class="bi bi-telephone-fill text-xl"></i>
                            </div>
                            <h4 class="font-bold text-slate-900">Telefon</h4>
                            <a href="tel:@contact.Phone" class="text-slate-500 text-sm mt-1 hover:text-brand-600 transition-colors">@contact.Phone</a>
                        </div>

                        <div class="bg-gray-50 p-6 rounded-2xl border border-gray-100">
                            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center text-brand-600 shadow-sm mb-4">
                                <i class="bi bi-share-fill text-xl"></i>
                            </div>
                            <h4 class="font-bold text-slate-900">Web</h4>
                            <a href="@contact.WebSite" target="_blank" class="text-slate-500 text-sm mt-1 hover:text-brand-600 transition-colors">Websiteyi Ziyaret Et</a>
                        </div>
                    </div>
                    @* <iframe src="@contact.MapLocation"></iframe> *@

                    <div class="w-full h-64 bg-gray-200 rounded-2xl overflow-hidden shadow-sm border border-gray-200 relative">
                        <iframe src="@contact.MapLocation"></iframe>
                    </div>

                   @*  <div class="w-full h-64 bg-gray-200 rounded-2xl overflow-hidden shadow-sm border border-gray-200 relative">
                        @if (!string.IsNullOrEmpty(contact.MapLocation))
                        {
                            @Html.Raw(contact.MapLocation)
                        }
                        else
                        {
                            <div class="flex items-center justify-center h-full text-slate-400">Harita bilgisi yok</div>
                        }
                    </div> *@ 
                }
            </div>

            <div class="bg-white p-8 md:p-10 rounded-3xl shadow-xl shadow-brand-900/5 border border-gray-100 relative">

                <div class="mb-8">
                    <h3 class="text-2xl font-bold text-slate-900">Mesaj Gönderin</h3>
                    <p class="text-slate-500 text-sm">En kısa sürede dönüş yapacağım.</p>
                </div>

                <form id="contact-form" onsubmit="sendMessage(event)">

                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Adınız Soyadınız</label>
                            <div class="relative">
                                <span class="absolute left-4 top-3.5 text-slate-400"><i class="bi bi-person"></i></span>
                                <input type="text" name="SenderName" required class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:bg-white transition-all text-slate-800 placeholder-slate-400" placeholder="Örn: Ahmet Yılmaz">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Email Adresiniz</label>
                            <div class="relative">
                                <span class="absolute left-4 top-3.5 text-slate-400"><i class="bi bi-envelope"></i></span>
                                <input type="email" name="SenderEmail" required class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:bg-white transition-all text-slate-800 placeholder-slate-400" placeholder="ornek@email.com">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Konu</label>
                            <div class="relative">
                                <span class="absolute left-4 top-3.5 text-slate-400"><i class="bi bi-chat-square-dots"></i></span>
                                <select name="MessageSubject" required class="w-full pl-10 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:bg-white transition-all text-slate-800 appearance-none cursor-pointer">
                                    <option value="" disabled selected>Seçiniz...</option>
                                    <option value="Proje Teklifi & İş Birliği">Proje Teklifi & İş Birliği</option>
                                    <option value="Eğitim & Kurumsal Eğitim Talebi">Eğitim & Kurumsal Eğitim Talebi</option>
                                    <option value="Web / API Geliştirme Talebi">Web / API Geliştirme Talebi</option>
                                    <option value="Danışmanlık & Teknik Destek">Danışmanlık & Teknik Destek</option>
                                    <option value="Şikayet & Öneri">Şikayet & Öneri</option>
                                    <option value="Diğer">Diğer</option>
                                </select>
                                <span class="absolute right-4 top-3.5 text-slate-400 pointer-events-none"><i class="bi bi-chevron-down"></i></span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Mesajınız</label>
                            <textarea name="MessageText" rows="4" required class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:bg-white transition-all text-slate-800 placeholder-slate-400 resize-none" placeholder="Proje detaylarından bahsedebilirsiniz..."></textarea>
                        </div>

                        <button type="submit" id="btn-submit" class="w-full py-4 bg-brand-600 text-white font-bold rounded-xl shadow-lg shadow-brand-500/30 hover:bg-brand-700 hover:-translate-y-1 transition-all duration-300 flex items-center justify-center gap-2">
                            <span>Mesajı Gönder</span>
                            <i class="bi bi-send-fill"></i>
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>