@model Contact

<footer class="bg-slate-900 text-slate-300 py-16 relative overflow-hidden">

    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-1 bg-gradient-to-r from-transparent via-brand-500 to-transparent opacity-50"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-96 h-32 bg-brand-600 rounded-full blur-[100px] opacity-20 pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">

            <div class="lg:col-span-1">
                <a href="#" class="flex items-center gap-2 mb-6 group w-fit">
                    <div class="w-10 h-10 bg-brand-600 text-white rounded-xl flex items-center justify-center font-bold text-xl shadow-lg shadow-brand-500/20 group-hover:scale-110 transition-transform duration-300">
                        Y
                    </div>
                    <span class="text-xl font-bold text-white tracking-tight">
                        Yunus<span class="text-brand-500">.Dev</span>
                    </span>
                </a>
                <p class="text-slate-400 text-sm leading-relaxed mb-6">
                    Modern web teknolojileri ile ölçeklenebilir ve estetik dijital çözümler üretiyorum.
                </p>

                <div class="flex items-center gap-3">
                    <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-brand-600 flex items-center justify-center text-white transition-all duration-300 hover:-translate-y-1">
                        <i class="bi bi-linkedin"></i>
                    </a>
                    <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-gray-800 flex items-center justify-center text-white transition-all duration-300 hover:-translate-y-1">
                        <i class="bi bi-github"></i>
                    </a>
                    <a href="#" class="w-10 h-10 rounded-lg bg-white/5 hover:bg-pink-600 flex items-center justify-center text-white transition-all duration-300 hover:-translate-y-1">
                        <i class="bi bi-instagram"></i>
                    </a>
                </div>
            </div>

            <div>
                <h4 class="text-white font-bold mb-6">Hızlı Menü</h4>
                <ul class="space-y-3 text-sm">
                    <li><a href="#section1" class="hover:text-brand-400 transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Ana Sayfa</a></li>
                    <li><a href="#section2" class="hover:text-brand-400 transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Hakkımda</a></li>
                    <li><a href="#section3" class="hover:text-brand-400 transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Yetenekler</a></li>
                    <li><a href="#section6" class="hover:text-brand-400 transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> Projeler</a></li>
                    <li><a href="#section8" class="hover:text-brand-400 transition-colors flex items-center gap-2"><i class="bi bi-chevron-right text-xs"></i> İletişim</a></li>
                </ul>
            </div>

            <div>
                <h4 class="text-white font-bold mb-6">İletişim</h4>

                @if (Model != null)
                {
                    <ul class="space-y-4 text-sm">
                        <li class="flex items-start gap-3">
                            <i class="bi bi-geo-alt-fill text-brand-500 text-lg shrink-0"></i>
                            <span class="text-slate-400 leading-snug">
                                @Model.Address
                            </span>
                        </li>

                        <li class="flex items-center gap-3">
                            <i class="bi bi-telephone-fill text-brand-500 text-lg shrink-0"></i>
                            <a href="tel:@Model.Phone" class="text-slate-400 hover:text-white transition-colors">
                                @Model.Phone
                            </a>
                        </li>

                        <li class="flex items-center gap-3">
                            <i class="bi bi-envelope-fill text-brand-500 text-lg shrink-0"></i>
                            <a href="mailto:@Model.Email" class="text-slate-400 hover:text-white transition-colors break-all">
                                @Model.Email
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <p class="text-slate-500 text-sm">İletişim bilgisi yüklenemedi.</p>
                }
            </div>

            <div>
                <h4 class="text-white font-bold mb-6">Haberdar Olun</h4>
                <p class="text-xs text-slate-400 mb-4">Yeni projelerimden haberdar olmak için mail adresinizi bırakın.</p>
                <form class="flex flex-col gap-3">
                    <input type="email" placeholder="Email adresiniz" class="bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-brand-500 focus:bg-white/10 transition-colors">
                    <button type="button" class="bg-brand-600 text-white text-sm font-bold py-3 rounded-lg hover:bg-brand-700 transition-colors shadow-lg shadow-brand-900/50">
                        Abone Ol
                    </button>
                </form>
            </div>

        </div>

        <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">

            <p class="text-xs text-slate-500 text-center md:text-left">
                &copy; @DateTime.Now.Year <span class="text-white font-semibold">Yunus Emre</span>. Tüm hakları saklıdır.
            </p>

            <button onclick="scrollToTop()" class="flex items-center gap-2 text-xs font-bold text-white bg-white/10 px-4 py-2 rounded-full hover:bg-brand-600 transition-colors group cursor-pointer">
                Yukarı Çık
                <i class="bi bi-arrow-up group-hover:-translate-y-1 transition-transform"></i>
            </button>

        </div>
    </div>
</footer>