@model List<Skill>

<section id="section3" class="py-24 bg-slate-200 relative overflow-hidden">

    <div class="absolute top-10 left-10 text-9xl text-gray-50 opacity-50 select-none font-bold pointer-events-none">
        &lt;/&gt;
    </div>
    <div class="absolute bottom-10 right-10 text-9xl text-gray-50 opacity-50 select-none font-bold pointer-events-none">
        { }
    </div>

    <div class="container mx-auto px-6 relative z-10">

        <div class="text-center mb-16">
            <span class="text-brand-600 font-bold tracking-wider uppercase text-sm bg-brand-50 px-3 py-1 rounded-full">Yetenekler</span>
            <h2 class="text-4xl font-extrabold text-slate-900 mt-4">Teknik Uzmanlıklarım</h2>
            <p class="text-slate-500 mt-4 max-w-2xl mx-auto">
                Yazılım geliştirme süreçlerinde kullandığım teknolojiler ve yetkinlik seviyelerim.
            </p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">

                @foreach (var item in Model)
                {
                    <div class="group p-6 rounded-2xl border border-gray-100 hover:border-brand-100 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 bg-white">

                        <div class="flex justify-between items-center mb-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-lg bg-brand-50 text-brand-600 flex items-center justify-center font-bold text-lg group-hover:bg-brand-600 group-hover:text-white transition-colors duration-300">
                                    @(item.SkillTitle?.Substring(0, 1) ?? "S")
                                </div>
                                <h3 class="font-bold text-slate-800 text-lg">@item.SkillTitle</h3>
                            </div>
                            <span class="text-brand-600 font-bold text-sm bg-brand-50 px-2 py-1 rounded-md">
                                %@item.SkillValue
                            </span>
                        </div>

                        <div class="w-full bg-gray-100 rounded-full h-3 overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-brand-500 to-brand-400 rounded-full relative"
                                 style="width: @item.SkillValue%">

                                <div class="absolute top-0 left-0 bottom-0 right-0 bg-gradient-to-r from-transparent via-white/30 to-transparent -translate-x-full animate-[shimmer_2s_infinite]"></div>
                            </div>
                        </div>

                    </div>
                }

            </div>
        }
        else
        {
            <div class="text-center py-12">
                <p class="text-slate-500">Henüz yetenek eklenmemiş.</p>
            </div>
        }

    </div>
</section>